<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mylist_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/app_bar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/below_bone_title_container"
                android:layout_height="match_parent"
                android:layout_width="match_parent">
            <!--you can put your existing views of your current xml here, so yes your entire xml is now inside this FrameLayout -->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/static_page_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/static_page_main_text" />


            </LinearLayout>

            </FrameLayout>

        </ScrollView>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="306dp"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/Achbar_green" />

        <EditText android:id="@+id/inputSearch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:hint="חפש"
            android:textColorHint="@color/Gray"
            android:background="@drawable/rounded_corners_layout"

            />



        <!-- Side navigation drawer UI -->
        <ListView
            android:id="@+id/myNavList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@color/WhiteSmoke" />

        <!-- hidden search results listView -->
        <ListView
            android:id="@+id/searchList"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="60dp"
            android:background="@color/White"
            android:visibility="gone"
            />
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>