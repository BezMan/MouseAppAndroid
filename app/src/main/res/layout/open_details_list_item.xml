<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="4dp"
    >


    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_margin="1dp"
        android:background="@color/White"
        >

        <ImageView
            android:layout_height="match_parent"
            android:layout_width="15dp"
            android:src="@drawable/grey_left_arrow"
            android:layout_margin="20dp"
            />

        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            style="@android:style/TextAppearance.Large"
            android:text="כותרת א"
            android:textStyle="bold"
            />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                style="@android:style/TextAppearance.Large"
                android:text="כותרת ב"
                android:textStyle="bold"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                style="@android:style/TextAppearance.Large"
                android:text="כותרת ג"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_margin="1dp"
        android:background="@color/White">


        <ImageView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/waze_icon"
            android:padding="3dp"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text="נווט ליעד"
            android:layout_gravity="center_vertical"
            style="@android:style/TextAppearance.Large"
            />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/gray_default_background"
            />


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:text="מספר מטרים ממך"
            android:layout_gravity="center_vertical"
            style="@android:style/TextAppearance.Large"
            />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_margin="1dp"
        android:background="@color/White">


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:text="address in english"
            android:layout_gravity="center_vertical"
            style="@android:style/TextAppearance.Large"
            android:gravity="center_horizontal"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_margin="1dp"
        android:background="@color/White">


        <ImageView
            android:layout_height="17dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/coin_3"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="מחיר"
            android:layout_gravity="center_vertical"
            style="@android:style/TextAppearance.Large"
            />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/gray_default_background"
            />


        <RatingBar
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleIndicator"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.1"
            android:paddingLeft="75dp"
            android:rating="3"
            />


    </LinearLayout>




</LinearLayout>