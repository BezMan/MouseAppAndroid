<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="90dp"
    android:layout_width="100dp"
    android:background="@color/Black"
    android:orientation="vertical"
    >


    <ImageView
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:id="@+id/nav_drawer_imageView"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:id="@+id/attending_count_imageView"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/circle_red_40"
        android:visibility="invisible"

        />

    <TextView
        android:id="@+id/attending_count_txt"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18dp"
        android:textColor="@color/White"
        android:layout_marginLeft="71dp"
        android:layout_marginTop="10dp"
        android:text=""


        />

    <TextView
        android:id="@+id/nav_drawer_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18dp"
        android:textColor="@color/White"
        android:gravity="center"
        android:text="item"
        android:paddingTop="12dp"
        android:paddingBottom="15dp"
        android:layout_below="@+id/nav_drawer_imageView"

        />

    <View
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/WhiteSmoke"
        android:layout_below="@+id/nav_drawer_text"

        />



</RelativeLayout>

