<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mylist_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/app_bar" />


        <!--<android.support.v4.view.ViewPager-->
            <!--android:id="@+id/viewpager"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="220dp"-->
            <!--/>-->


        <!-- -->
        <!--<com.comrax.mouseappandroid.helpers.MultipleOrientationSlidingDrawer-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_width="match_parent"-->
            <!-->-->
            <!-- -->
        <!--</com.comrax.mouseappandroid.helpers.MultipleOrientationSlidingDrawer>-->



        <com.comrax.mouseappandroid.helpers.AnimatedExpandableListView
            android:id="@+id/details_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:groupIndicator="@android:color/transparent"
            android:divider="@android:color/transparent"
            />


    </LinearLayout>


    <RelativeLayout
        android:layout_width="306dp"
        android:layout_height="match_parent"
        android:layout_gravity="left">

        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/Achbar_green" />

        <EditText android:id="@+id/inputSearch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:hint="חפש"
            android:textColorHint="@color/Gray"
            android:background="@drawable/rounded_corners_layout"

            />

        <!-- Side navigation drawer UI -->
        <ListView
            android:id="@+id/myNavList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/nav_drawer_imageView"
            android:layout_marginTop="60dp"
            android:background="@color/Achbar_gray" />

        <!-- hidden search results listView -->
        <ListView
            android:id="@+id/searchList"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="60dp"
            android:background="@color/White"
            android:visibility="gone"
            />

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>