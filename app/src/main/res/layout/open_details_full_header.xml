<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slidingLayer="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mylist_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/app_bar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/color_bone_title" />

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layout_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/bone_title">



                <com.comrax.mouseappandroid.helpers.AnimatedExpandableListView
                    android:id="@+id/details_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:groupIndicator="@android:color/transparent"
                    android:divider="@android:color/transparent"
                    />

            </FrameLayout>


            <com.wunderlist.slidinglayer.SlidingLayer
                android:id="@+id/slidingLayer1"
                android:layout_width="match_parent"
                android:layout_height="470dp"
                slidingLayer:stickTo="top"
                slidingLayer:offsetDistance="50dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent">

                    <fragment
                        android:id="@+id/map"
                        android:layout_width="match_parent"
                        android:layout_height="420dp"
                        class="com.google.android.gms.maps.MapFragment"
                        />


                    <View
                        android:id="@+id/blackLine"
                        android:layout_width="match_parent"
                        android:layout_height="5px"
                        android:background="@color/Black"
                        android:layout_below = "@+id/map"
                        >

                    </View>
                    <Button
                        android:id="@+id/buttonToggleDrawer"
                        android:onClick="buttonClicked"
                        android:layout_width="92dp"
                        android:layout_height="40dp"
                        android:layout_below = "@+id/blackLine"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/map_btn"/>

                </RelativeLayout>

            </com.wunderlist.slidinglayer.SlidingLayer>

        </RelativeLayout>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="306dp"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/Achbar_green" />

        <EditText
            android:id="@+id/inputSearch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_corners_layout"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:hint="חפש"
            android:textColorHint="@color/Gray"

            />


        <!-- Side navigation drawer UI -->
        <ListView
            android:id="@+id/myNavList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@color/WhiteSmoke" />

        <!-- hidden search results listView -->
        <ListView
            android:id="@+id/searchList"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="60dp"
            android:background="@color/White"
            android:visibility="gone" />
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>