<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/sanen" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Gray"
            android:textColor="@color/White"
            android:text="הוסף למועדפים"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="מלל א"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="מלל ב"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/dareg"
                android:textAppearance="?android:attr/textAppearanceLarge"

                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></LinearLayout>

            <RatingBar
                android:id="@+id/open_details_item_ratingBar"
                style="?android:attr/ratingBarStyleIndicator"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:isIndicator="true"
                android:numStars="5" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="הרבה מלל"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView5" />

        <TextView
            android:paddingRight="10dp"
            android:background="@color/Gray"
            android:textColor="@color/White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="טלפון"
            android:id="@+id/textView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView9" />

        <TextView
            android:paddingRight="10dp"
            android:background="@color/Gray"
            android:textColor="@color/White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="שעות פעילות"
            android:id="@+id/textView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView10" />

        <TextView
            android:paddingRight="10dp"
            android:background="@color/Gray"
            android:textColor="@color/White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="תחבורה ציבורית"
            android:id="@+id/textView8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView11" />



        <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:background="@color/Achbar_green"
            android:layout_gravity="center"
            android:text="יש לכם מה להגיד? הוסיפו תגובה"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="17dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Achbar_green"
            android:layout_gravity="center"
            android:text="מצאתם טעות? המקום נסגר? עדכנו אותנו"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="17dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/WhiteSmoke"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/footer_item_layout_1"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_margin="1dp"
                android:background="@color/White"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:src="@drawable/grey_left_arrow" />

                <TextView
                    android:id="@+id/footer_item_title_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="5"
                    android:text="מילים בעברית"
                    android:textColor="@color/Black"
                    android:textSize="19dp"

                    />

                <ImageView
                    android:id="@+id/footer_item_image_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/WhiteSmoke"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/footer_item_layout_2"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_margin="1dp"
                android:background="@color/White"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:src="@drawable/grey_left_arrow" />

                <TextView
                    android:id="@+id/footer_item_title_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="5"
                    android:text="מילים בעברית"
                    android:textColor="@color/Black"
                    android:textSize="19dp"

                    />

                <ImageView
                    android:id="@+id/footer_item_image_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/WhiteSmoke"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/footer_item_layout_3"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_margin="1dp"
                android:background="@color/White"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:src="@drawable/grey_left_arrow" />

                <TextView
                    android:id="@+id/footer_item_title_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="5"
                    android:text="מילים בעברית"
                    android:textColor="@color/Black"
                    android:textSize="19dp"

                    />

                <ImageView
                    android:id="@+id/footer_item_image_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/WhiteSmoke"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/footer_item_layout_4"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_margin="1dp"
                android:background="@color/White"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:src="@drawable/grey_left_arrow" />

                <TextView
                    android:id="@+id/footer_item_title_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="5"
                    android:text="מילים בעברית"
                    android:textColor="@color/Black"
                    android:textSize="19dp"

                    />

                <ImageView
                    android:id="@+id/footer_item_image_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>




</ScrollView>