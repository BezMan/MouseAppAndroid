<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/sanen" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Gray"
            android:text="הוסף למועדפים"
            android:textColor="@color/White"
            android:textSize="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:background="@color/White">


            <TextView
                android:id="@+id/detailed_place_hebrew_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="מלל א"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_margin="3dp"
                />

            <TextView
                android:id="@+id/detailed_place_english_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="מלל ב"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginRight="3dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/dareg"
                    android:textAppearance="?android:attr/textAppearanceLarge"

                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"></LinearLayout>

                <RatingBar
                    android:id="@+id/open_details_item_ratingBar"
                    style="?android:attr/ratingBarStyleIndicator"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:isIndicator="true"
                    android:numStars="5" />


            </LinearLayout>

            <TextView
                android:id="@+id/detailed_place_main_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="הרבה מלל"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>

        <TextView
                android:id="@+id/detailed_place_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@color/White"
            android:layout_margin="8dp"
            android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical"
        >


    <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Gray"
                android:paddingRight="10dp"
                android:text="טלפון"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/White" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/White"

            >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:src="@drawable/phone_icon"/>
            <TextView
                android:id="@+id/detailed_place_phone_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_gravity="center_vertical"
                android:paddingLeft="15dp"
                />

        </LinearLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Gray"
                android:paddingRight="10dp"
                android:text="שעות פעילות"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/White" />

            <TextView
                android:id="@+id/detailed_place_activity_hours"
                android:background="@color/White"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Gray"
                android:paddingRight="10dp"
                android:text="תחבורה ציבורית"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/White" />

            <TextView
                android:id="@+id/detailed_place_public_transportation"
                android:background="@color/White"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Gray"
            android:paddingRight="10dp"
            android:text="תגובות גולשים"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/detailed_place_responses"
            android:background="@color/White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />


        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/Achbar_green"
                android:text="יש לכם מה להגיד? הוסיפו תגובה"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/Achbar_green"
                android:text="מצאתם טעות? המקום נסגר? עדכנו אותנו"
                android:textSize="17dp"
                android:textStyle="bold" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/WhiteSmoke"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/footer_item_layout_1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="1dp"
                android:background="@color/White"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="14dp"
                    android:src="@drawable/grey_left_arrow" />

                <TextView
                    android:id="@+id/footer_item_title_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="5"
                    android:text="א"
                    android:textColor="@color/Black"
                    android:textSize="19dp"

                    />

                <ImageView
                    android:id="@+id/footer_item_image_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/WhiteSmoke"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/footer_item_layout_2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="1dp"
                android:background="@color/White"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="14dp"
                    android:src="@drawable/grey_left_arrow" />

                <TextView
                    android:id="@+id/footer_item_title_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="8dp"
                    android:layout_weight="5"
                    android:text="ב"
                    android:textColor="@color/Black"
                    android:textSize="19dp"

                    />

                <ImageView
                    android:id="@+id/footer_item_image_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/WhiteSmoke"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/footer_item_layout_3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="1dp"
                android:background="@color/White"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="14dp"
                    android:src="@drawable/grey_left_arrow" />

                <TextView
                    android:id="@+id/footer_item_title_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="8dp"
                    android:layout_weight="5"
                    android:text="ג"
                    android:textColor="@color/Black"
                    android:textSize="19dp"

                    />

                <ImageView
                    android:id="@+id/footer_item_image_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/WhiteSmoke"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/footer_item_layout_4"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="1dp"
                android:background="@color/White"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="14dp"
                    android:src="@drawable/grey_left_arrow" />

                <TextView
                    android:id="@+id/footer_item_title_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="8dp"
                    android:layout_weight="5"
                    android:text="ד"
                    android:textColor="@color/Black"
                    android:textSize="19dp"

                    />

                <ImageView
                    android:id="@+id/footer_item_image_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/footer_item_ad"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"


            />

    </LinearLayout>


</ScrollView>